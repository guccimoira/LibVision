<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F1"
    android:id="@+id/main"
    tools:context=".TheAboutUs">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backhome_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/title_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="65dp"
        android:text="Welcome to"
        android:textColor="@color/dark_blue"
        android:textSize="19sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backhome_button"/>

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="3dp"
        android:text="LibVision"
        android:textColor="@color/dark_blue"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_welcome" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="330dp"
        android:layout_height="530dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/border_manual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintVertical_bias="0.162">

        <!-- LinearLayout for Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header for Instructions -->
            <TextView
                android:id="@+id/about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:text="About Us"
                android:textColor="@color/dark_blue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/school_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Pamantasan ng Lungsod ng Maynila"
                android:textColor="@color/dark_blue"
                android:textSize="19sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/school_infoone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:text="Welcome to LibVision, where technology meets knowledge in a whole new way! Developed for the Pamantasan ng Lungsod ng Maynila (PLM) Library, LibVision is an innovative mobile app designed to revolutionize your library experience. Using Augmented Reality (AR), it transforms your smartphone into a navigation tool that guides you effortlessly to your desired books with intuitive digital overlays."
                android:textSize="15sp"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/school_infotwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:text="LibVision brings the future to your fingertips with its key features: the LED-Activated Book Locator, which lights up target books with a visual LED signal for easy spotting, and the Visual Marker Scanner, enabling you to scan special markers around the library to pinpoint your starting point and generate an AR-guided route directly to the book you're looking for."
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/school_infothree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:text="For our dedicated library staff, LibVision makes managing the collection a breeze. The real-time Book Counter uses camera-based object detection to count books as you go, streamlining inventory tasks. By seamlessly blending cutting-edge technology with the rich resources of the library, LibVision enhances accessibility, boosts efficiency, and creates a more engaging and user-friendly experience for the entire PLM community."
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>